<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            tools:ignore="NestedWeights" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instrumentBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/instrumentBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instrument_back"
                android:contentDescription="back"
                app:layout_constraintBottom_toTopOf="@+id/instrumentBackText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/instrumentBackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/xiaowei"
                android:textColor="@color/gainsboro"
                android:textColorHighlight="@color/gainsboro"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            tools:ignore="NestedWeights" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instrumentResume"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/instrumentResumeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instrument_resume"
                android:contentDescription="pause"
                app:layout_constraintBottom_toTopOf="@+id/instrumentResumeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/instrumentResumeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="继续"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/xiaowei"
                android:textColor="@color/gainsboro"
                android:textColorHighlight="@color/gainsboro"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            tools:ignore="NestedWeights" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instrumentRetry"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/instrumentRetryBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instrument_retry"
                android:contentDescription="retry"
                app:layout_constraintBottom_toTopOf="@+id/instrumentRetryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/instrumentRetryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重唱"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/xiaowei"
                android:textColor="@color/gainsboro"
                android:textColorHighlight="@color/gainsboro"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            tools:ignore="NestedWeights" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instrumentFinish"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/instrumentFinishBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/instrument_finish"
                android:contentDescription="finish"
                app:layout_constraintBottom_toTopOf="@+id/instrumentFinishText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/instrumentFinishText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/xiaowei"
                android:textColor="@color/gainsboro"
                android:textColorHighlight="@color/gainsboro"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            tools:ignore="NestedWeights" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>